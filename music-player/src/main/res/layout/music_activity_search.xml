<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/music_top_title_bg">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/music_btn_back"
                android:src="@drawable/video_controller_back_white_selector"
                style="@style/MusicTitleBack"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/music_search_input_bg">
                <ImageView
                    android:id="@+id/music_btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_music_search_mini"
                    android:paddingLeft="7dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/music_et_input"
                    android:layout_toRightOf="@+id/iv_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="#AAAAAA"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/colorAccent"
                    android:inputType="textAutoComplete"/>
                <ImageView
                    android:id="@+id/music_btn_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_music_input_clean"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <LinearLayout
            android:id="@+id/music_tags_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="历史搜索记录"/>
                <ImageView
                    android:id="@+id/music_btn_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_music_search_remove"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </RelativeLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/music_search_flags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_margin="10dp"
                app:flexWrap="wrap"
                app:dividerDrawableHorizontal="@drawable/music_tags_driver_trans"
                app:dividerDrawableVertical="@drawable/music_tags_driver_trans"
                app:showDivider="middle" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@drawable/music_list_scroll_bar"
            android:overScrollMode="never"
            android:id="@+id/recyler_view">
        </android.support.v7.widget.RecyclerView>
    </FrameLayout>
</LinearLayout>