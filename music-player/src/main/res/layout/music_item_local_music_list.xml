<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/item_root_view">
        <com.music.player.lib.view.MusicRoundImageView
            android:id="@+id/view_item_cover"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:scaleType="centerCrop"
            app:image_type="image_round"
            app:image_borderRadius="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_music_default_cover"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.music.player.lib.view.MusicMarqueeTextView
                android:id="@+id/view_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#000000"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/view_item_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#999999"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:text="--"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/view_playing_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_kusic_current_play"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/view_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_music_item_menu"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
    <View
        android:id="@+id/view_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F0F0F0"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"/>
</LinearLayout>