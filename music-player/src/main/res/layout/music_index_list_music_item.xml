<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.music.player.lib.view.MusicRoundImageView
            android:id="@+id/view_item_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:image_type="image_round"
            app:image_borderRadius="5dp"
            android:src="@drawable/ic_music_default_cover"/>
        <!--作者-->
        <TextView
            android:id="@+id/view_item_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/music_index_item_list_bottom_bg"
            android:layout_gravity="bottom"
            android:padding="4dp"
            android:textColor="#FFFFFFFF"
            android:textSize="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="--"/>
        <!--MUSIC标识-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/music_index_item_list_top_bg">
            <ImageView
                android:id="@+id/view_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:src="@drawable/ic_music_audio"/>
        </FrameLayout>
    </FrameLayout>
    <!--标题-->
    <TextView
        android:id="@+id/view_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="--"
        android:textSize="12dp"
        android:textColor="#333333"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>
</LinearLayout>