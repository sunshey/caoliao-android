        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_white_selector3</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--titleBar样式-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/toolbarItemBackground</item>
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="overlapAnchor">false</item>
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0dp</item>
        <item name="android:textColor">@color/common_h1</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12.0dp</item>
        <item name="android:textColor">#99FFFFFF</item>
    </style>

    <style name="tab_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

    <!--从下而上Dialog出场动画主题样式-->
    <style name="ButtomDialogAnimationStyle" parent="android:style/Theme.Dialog">
        <!-- 是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/ButtomAnimation</item>
    </style>

    <!--从下而上Dialog出场动画主题样式-->
    <style name="ButtomDialogTransparentAnimationStyle" parent="android:style/Theme.Dialog">
        <!-- 是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/ButtomAnimation</item>
    </style>


    <!--从屏幕中间出场的动画样式-->
    <style name="CenterDialogAnimationStyle" parent="Animation.AppCompat.Dialog">
        <!-- 是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:windowAnimationStyle">@style/CenterAnimation</item>-->
    </style>

    <!--从屏幕中间出场的动画样式-->
    <style name="WaitDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:windowAnimationStyle">@style/CenterAnimation</item>-->
    </style>

    <!--从下而上动画-->
    <style name="ButtomAnimation">
        <!-- 入场动画 -->
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
        <!-- 出厂动画 -->
        <item name="android:windowExitAnimation">@anim/menu_exit</item>
    </style>
    <!--从内而外动画-->
    <style name="CenterAnimation">
        <!-- 入场动画 -->
        <item name="android:windowEnterAnimation">@anim/zoomin</item>
        <!-- 出厂动画 -->
        <item name="android:windowExitAnimation">@anim/zoomout</item>
    </style>

    <!--右上角工具菜单-->
    <style name="RightTopAnimation">
        <!-- 入场动画 -->
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <!-- 出厂动画 -->
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!--视频详情菜单弹窗样式-->
    <style name="MenuDialog" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/MenuDialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="MenuDialogAnimation">
        <item name="android:windowExitAnimation">@anim/menu_exit</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
    </style>
    <!--首页底部菜单文字样式-->
    <style name="main_tab_bottom">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/text_tab_style</item>
        <item name="android:layout_marginTop">3dp</item>
