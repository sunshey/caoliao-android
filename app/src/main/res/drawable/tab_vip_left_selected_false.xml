<?xml version="1.0" encoding="utf-8"?>
<!-- 没有给Shape图形设置大小的情况下默认和空间大小一样 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <solid android:color="@color/transparent"/>
    <!-- 圆角  radius圆角的弧度 -->
    <corners android:topLeftRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="0dp" android:topRightRadius="0dp"></corners>
	<!-- 边框  width边框粗细   color边框颜色-->
    <stroke android:width="1dp" android:color="@color/white"></stroke>
</shape>
