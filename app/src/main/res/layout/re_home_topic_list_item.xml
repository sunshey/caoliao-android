<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    android:layout_marginLeft="0.8dp"
    android:layout_marginRight="0.8dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:id="@+id/re_item_view"
        android:layout_width="110dp"
        android:layout_height="156dp">
        <com.yc.liaolive.view.widget.TouchFilterImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_black_topic_list_item_shape_gratien"
            android:padding="6dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/iv_topic_play_count"/>
            <TextView
                android:id="@+id/tv_item_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:text="561ä¸‡"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>