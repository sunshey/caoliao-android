<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:background="#F5F6FA">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="127dp">
                    <RelativeLayout
                        android:id="@+id/re_et_input"
                        android:layout_width="98dp"
                        android:layout_height="98dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="12dp">
                        <ImageView
                            android:id="@+id/video_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_default_live_min_icon"/>
                        <TextView
                            android:id="@+id/item_media_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_media_look"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/h4"
                            android:padding="3dp"
                            android:text="点击更换封面"
                            android:layout_alignParentBottom="true"
                            android:visibility="visible"/>
                    </RelativeLayout>
                    <com.yc.liaolive.media.view.EditTextWithScrollView
                        android:id="@+id/et_input"
                        android:layout_toRightOf="@+id/re_et_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:scrollbars="vertical"
                        android:gravity="start"
                        android:textColorHint="#66666666"
                        android:textColor="@color/coment_color"
                        android:hint="请输入10个字以内的视频描述"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.2"
                        android:textSize="@dimen/h8"
                        android:background="@null"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_text_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CCCCCC"
                    android:textSize="14dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="14dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_comment_button_false"
                android:textColor="@color/white"
                android:textSize="@dimen/h10"
                android:textStyle="bold"
                android:gravity="center"
                android:text="立即发布"/>
            <TextView
                android:id="@+id/tv_upload_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>