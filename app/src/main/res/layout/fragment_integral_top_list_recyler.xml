<?xml version="1.0" encoding="utf-8"?>
<layout >
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/background_dark1">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyer_view"
            android:layout_marginBottom="59dp">
        </android.support.v7.widget.RecyclerView>
        <com.yc.liaolive.view.layout.DataChangeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/empty_view">
        </com.yc.liaolive.view.layout.DataChangeView>
        <LinearLayout
            android:id="@+id/oneself_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="invisible"
            android:layout_gravity="bottom">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#D4D3D3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:id="@+id/oneself_tv_num"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/h7"
                    android:textColor="@color/top_num_color"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/oneself_ic_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/pay_user_bg_red_shape"
                    android:padding="1dp"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:id="@+id/item_ll_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/oneself_user_gradle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/oneself_vip_gradle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"/>
                        <com.yc.liaolive.view.widget.MarqueeTextView
                            android:id="@+id/oneself_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="--" />
                        <ImageView
                            android:id="@+id/oneself_user_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_user_sex_wumen"
                            android:layout_marginLeft="3dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/oneself_tv_total_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="@dimen/h5"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/top_num_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>

