<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/re_root_item"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">
        <RelativeLayout
            android:id="@+id/re_icon_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/item_iv_icon"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_task_vip"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/re_icon_view"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <com.yc.liaolive.view.widget.MarqueeTextView
                    android:id="@+id/item_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:textSize="@dimen/h8"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="--"/>
                <com.yc.liaolive.view.widget.MarqueeTextView
                    android:id="@+id/item_tv_desp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/common_h3"
                    android:layout_marginTop="5dp"
                    android:text="--"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:text="领取"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bt_bg_app_style_radius_selector"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="70dp"
        android:background="@color/colorTextE">
    </View>
</LinearLayout>