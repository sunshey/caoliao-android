<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/fans_root_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/item_space_16"
        android:paddingRight="@dimen/item_space_16">
        <TextView
            style="@style/PersonCenterTitle"
            android:text="@string/fans_contribution" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <com.yc.liaolive.view.widget.IndexMineFansListLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/person_face_item">
            </com.yc.liaolive.view.widget.IndexMineFansListLayout>
            <ImageView
                android:id="@+id/item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_mine_more" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line"/>
</LinearLayout>