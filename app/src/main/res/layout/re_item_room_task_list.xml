<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/item_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--头部-->
        <View
            android:id="@+id/item_group_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_background_color"/>
        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_room_task_group_line"
            android:gravity="center_vertical"
            android:drawablePadding="7dp"
            android:textColor="@color/black"
            android:textSize="@dimen/h8"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="新手任务"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_background_color"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_root_item"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/item_comment_bg"
        android:clickable="true">
        <RelativeLayout
            android:id="@+id/re_icon_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/item_iv_icon"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_task_vip"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/re_icon_view"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.yc.liaolive.view.widget.MarqueeTextView
                        android:id="@+id/item_tv_title"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/h8"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="--"/>
                    <com.yc.liaolive.view.widget.TaskProgressBar
                        android:layout_width="69dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        app:taskProgressTextColor="@color/white"
                        android:id="@+id/view_task_progress">
                    </com.yc.liaolive.view.widget.TaskProgressBar>
                </LinearLayout>
                <com.yc.liaolive.view.widget.MarqueeTextView
                    android:id="@+id/item_tv_desp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/common_h3"
                    android:layout_marginTop="6dp"
                    android:text="--"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/item_state_click"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp">
                <TextView
                    android:id="@+id/item_state"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="领取"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h5"
                    android:background="@drawable/bt_bg_app_style_radius_selector"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_background_color">
    </View>
</LinearLayout>