<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/ll_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_voice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/view_msg_durtion"
        android:layout_toRightOf="@+id/ll_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/colorTextG3"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true" />
    <View
        android:id="@+id/view_msg_read"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/ll_msg_content"
        android:background="@drawable/arl_app_stype_gray_dot" />
</RelativeLayout>
