<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.music.player.lib.view.MusicRoundImageView
            android:id="@+id/view_item_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_live_min_icon"
            app:image_type="image_round"
            app:image_borderRadius="4dp"/>
        <ImageView
            android:id="@+id/view_item_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:padding="4dp"
            android:background="@drawable/music_index_item_list_bg">
            <TextView
                android:id="@+id/view_item_anchor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="--"/>
            <ImageView
                android:id="@+id/view_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_music_audio"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/view_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="--"
        android:textSize="12dp"
        android:textColor="#FF333333"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>