<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yc.liaolive.view.widget.CommentTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_view"
            app:commentTitle="@string/register_phone_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_space_16"
            android:orientation="vertical"
            android:background="@drawable/bg_mine_top_background_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_register_account"
                    android:layout_marginLeft="18dp"/>
                <EditText
                    android:id="@+id/input_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/h8"
                    android:textColorHint="@color/colorTextC"
                    android:textColor="@color/coment_color"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="11"
                    android:hint="@string/register_hint_phone"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_qian"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_register_code"
                    android:layout_marginLeft="18dp"/>
                <EditText
                    android:id="@+id/input_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/h8"
                    android:textColorHint="@color/colorTextC"
                    android:textColor="@color/coment_color"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="4"
                    android:hint="@string/register_hint_code"/>
                <com.yc.liaolive.view.widget.CountdownBotton
                    android:id="@+id/btn_get_code"
                    android:layout_width="90dp"
                    android:layout_height="37dp"
                    android:layout_weight="0"
                    android:layout_marginRight="10dp"
                    app:countdownTextGetFocus="获取验证码"
                    app:countdownBackgroundGetFocus="@drawable/bt_bg_app_style_radius_noimal10"
                    app:countdownBackgroundOutFocus="@drawable/btn_login_getcode_bg"
                    app:countdownTextColorGetFocus="@color/white"
                    app:countdownTextColorOutFocus="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h6"
            android:gravity="center_horizontal"
            android:textColor="@color/common_h3"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="@dimen/item_space_5"
            android:layout_marginLeft="@dimen/item_space_16"
            android:layout_marginRight="@dimen/item_space_16"
            android:text="@string/login_next"
            android:textColor="@color/white"
            android:background="@drawable/bt_app_style_bg_selector"
            android:gravity="center"/>
    </LinearLayout>
</layout>