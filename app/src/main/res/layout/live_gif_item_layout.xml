<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clipChildren="false"
    android:clipToPadding="false">
    <LinearLayout
        android:id="@+id/re_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:id="@+id/gift_item_bg"
            android:layout_width="149dp"
            android:layout_height="36dp"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <!--
            android:background="@drawable/bg_gift_item_animation_shape"
            android:background="@drawable/gift_item_bg_shape"
            -->
            <!--用户头像-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:id="@+id/view_room_user_icon"
                android:layout_marginRight="5dp">
                <ImageView
                    android:id="@+id/view_gift_user_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="1.5dp"
                    android:background="@drawable/pay_user_bg_shape" />
            </RelativeLayout>
            <!--用户信息-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <com.yc.liaolive.view.widget.MarqueeTextView
                    android:id="@+id/view_tv_gift_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:id="@+id/view_tv_gift_namelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送 "
                        android:maxLength="2"
                        android:textSize="@dimen/h2"
                        android:textColor="@color/white_3"/>
                    <com.yc.liaolive.view.widget.MarqueeTextView
                        android:id="@+id/view_tv_gift_desp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-qde -"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h2"/>
                </LinearLayout>
            </LinearLayout>
            <!--礼物ICON-->
            <ImageView
                android:id="@+id/view_iv_gift_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <ImageView
            android:id="@+id/view_gift_num_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gift_numx" />
        <!--<com.yc.liaolive.live.view.rolltext.RollingTextView-->
            <!--android:id="@+id/view_gift_num"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:includeFontPadding="false"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:textStyle="italic"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:singleLine="true"-->
            <!--android:text="00:00"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="28sp" />-->
        <com.yc.liaolive.live.view.GradualTextView
            android:id="@+id/view_gift_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:textStyle="italic"/>
    </LinearLayout>
    <!--小倍率中奖-->
    <com.yc.liaolive.gift.view.DrawSmallMulitAnimationView
        android:id="@+id/tv_draw_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/h2"
        android:layout_marginLeft="40dp"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:shadowColor="#AD0000"
        android:layout_gravity="bottom"/>
    <!--500+ 中奖倍率-->
    <com.yc.liaolive.gift.view.DrawBigMulitAnimationView
        android:id="@+id/view_draw_icon"
        android:layout_width="135dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="35dp"
        android:visibility="invisible"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:antiAlias="true"/>
</FrameLayout>