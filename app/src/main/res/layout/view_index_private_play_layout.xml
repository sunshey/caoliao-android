<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yc.liaolive.view.widget.RoundImageView
        android:id="@+id/view_video_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:roundRadius="10dp"
        android:scaleType="centerCrop" />
    <com.yc.liaolive.media.manager.LiveVideoPlayerManager
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/view_btn_refresh"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/index_video_refresh"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:visibility="gone"/>
</RelativeLayout>