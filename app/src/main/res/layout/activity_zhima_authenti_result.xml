<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
        <com.yc.liaolive.view.widget.CommentTitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:commentTitle="实名认证结果" />
        <com.yc.liaolive.view.layout.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_zhima_authent_ok"
                        android:layout_marginTop="130dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/tv_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h6"
                        android:textColor="#FF6666"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:text="查询中，请稍后.."/>
                    <TextView
                        android:id="@+id/tv_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h4"
                        android:textColor="@color/gray_qian"
                        android:layout_marginTop="95dp"
                        android:layout_gravity="center_horizontal"
                        android:text="您已经是一名主播啦,赶快开启直播吧!"
                        android:visibility="invisible"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/btn_next"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="125dp"
                    android:textSize="@dimen/h8"
                    android:text="查询中..."
                    android:textColor="@color/white"
                    android:background="@drawable/bg_comment_button_cirround_red"
                    android:gravity="center"/>
            </FrameLayout>
        </com.yc.liaolive.view.layout.ReboundScrollView>
    </LinearLayout>
</layout>