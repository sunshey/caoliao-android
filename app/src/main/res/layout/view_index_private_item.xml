<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="12dp">
    <!--封面-->
    <com.yc.liaolive.view.widget.RoundImageView
        android:id="@+id/view_item_iv_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:roundShape="rect"
        app:roundRadius="4dp" />
    <TextView
        android:id="@+id/view_item_price_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:includeFontPadding="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/common_black20_icon_bg"
        tools:text="0钻石/分钟"/>
    <ImageView
        android:id="@+id/item_pay_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_space_4"/>
    <!-- 直播观众人数 -->
    <LinearLayout
        android:id="@+id/view_live_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/common_black20_icon_bg">
        <ImageView
            android:id="@+id/item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/item_look_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            tools:text="0人"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <com.yc.liaolive.view.widget.AutoBannerLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/view_item_price_name"
        android:layout_alignParentRight="true"
        app:bannerScaleType="centerCrop"
        app:bannerIndicatorHeight="6dp"
        app:bannerIndicatorWidth="6dp"
        app:bannerIndicatorMargin="5dp"
        app:bannerIndicatorSelected="@drawable/arice_app_style_dot"
        app:bannerIndicatorUnselected="@drawable/arice_white_dot"
        app:bannerRollDurtion="5000"
        app:bannerShowIndicator="false"
        android:layout_marginRight="10dp"
        android:id="@+id/item_banner_view" />
    <ImageView
        android:id="@+id/item_vip_ad"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_item_price_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/index_list_one_item_bottom_bg"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <!--左侧用户信息-->
        <TextView
            android:id="@+id/view_item_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:layout_above="@+id/view_item_desc"
            tools:text="主播名称"/>

        <com.yc.liaolive.index.view.AnchorStatusView
            android:id="@+id/user_offline_state"
            android:layout_toRightOf="@+id/view_item_title_name"
            android:layout_above="@+id/view_item_desc"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/view_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/view_item_recycler_view"
            tools:text="什么时候才能遇上对的你"/>

        <!--右侧用户封面-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_item_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>