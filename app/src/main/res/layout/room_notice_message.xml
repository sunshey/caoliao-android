<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_noti_roomt_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/view_noti_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_video"/>
        <TextView
            android:id="@+id/view_noti_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_noti_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="我是通知标题内容"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/view_noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_text_selector_color"
            android:textSize="12sp"
            android:text="我是标题"/>
        <TextView
            android:id="@+id/view_noti_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:text="2018-08-08"/>
    </RelativeLayout>
</LinearLayout>