<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/root_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/vip_recharge_item_bg">

        <!--左侧-->
        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/item_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorContent"
                    android:includeFontPadding="false"
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:text="终身VIP"/>

                <TextView
                    android:id="@+id/item_goods_huasuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vip_recharge_yellow_icon_bg"
                    android:textSize="10dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:layout_marginLeft="4dp"
                    android:text="最划算"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_act_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginTop="4dp"
                tools:text="送100话费"
                android:textColor="@color/white"
                android:background="@drawable/vip_recharge_act_tips_bg"
                android:textSize="12dp"
                android:includeFontPadding="false"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="134dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_title_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FF5757"
                    tools:text="¥99"/>

                <TextView
                    android:id="@+id/item_title_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    tools:text="(只需加1元变终身)"
                    android:textSize="12dp"
                    android:textColor="#FF5757"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="0元/天"
                android:textSize="12dp"
                android:textColor="@color/colorContent" />
        </LinearLayout>

    </RelativeLayout>

    <!--右侧限时-->
    <TextView
        android:id="@+id/item_xianshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vip_recharge_limit_iconbg"
        android:layout_alignParentRight="true"
        android:includeFontPadding="false"
        tools:text="限时促销"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:visibility="visible"/>
</RelativeLayout>