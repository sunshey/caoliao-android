<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="14dp"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants">

    <com.yc.liaolive.view.CircleImageView
        android:id="@+id/user_avatar"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:layout_toRightOf="@+id/user_avatar"
        android:layout_alignTop="@+id/user_avatar"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:drawablePadding="3dp"
        tools:text="用户昵称用户昵称"/>

    <TextView
        android:id="@+id/user_damion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_toLeftOf="@+id/user_talk_msg"
        android:singleLine="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/gray"
        android:textSize="11dp"
        tools:text="钻石数量"/>

    <TextView
        android:id="@+id/user_talk_msg"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:background="@drawable/msg_chat_btn"
        android:layout_toLeftOf="@+id/user_talk_video"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:gravity="center"
        android:text="私聊" />

    <View
        android:id="@+id/user_talk_redpoint"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/arice_red_dot"
        android:layout_alignRight="@+id/user_talk_msg"
        android:layout_alignTop="@+id/user_talk_msg"
        android:layout_marginTop="-3.5dp"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/user_talk_video"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:background="@drawable/video_chat_btn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:gravity="center"
        android:text="视频聊"/>

    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineBG"/>
</RelativeLayout>
