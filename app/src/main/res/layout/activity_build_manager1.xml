<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/diallog_top_title_bg_app_style">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="版本更新"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:textColor="@color/app_style"
                android:visibility="visible"/>
            <View
                android:id="@+id/title_line"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line"
                android:visibility="visible"/>
            <!--更新提示内容、下载进度条-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="135dp">
                    <TextView
                        android:id="@+id/tv_tips_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:scrollbarSize="0dp"
                        android:textColor="@color/import_video_thumb_bg"
                        android:textSize="@dimen/h7"
                        android:lineSpacingMultiplier="1.3"
                        android:padding="18dp"
                        android:visibility="visible"/>
                    <LinearLayout
                        android:id="@+id/ll_download_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tv_download_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="下载中"/>
                        <ProgressBar
                            android:id="@+id/pb_download_progress"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressDrawable="@drawable/download_progressbar"
                            android:progress="0"
                            android:max="100"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:id="@+id/tv_download_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextG6"
                            android:layout_marginTop="10dp"
                            android:text="0M/0M"/>
                    </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--顶部分割线-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorTextD">
            </View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <!--下载前询问按钮-->
            <LinearLayout
                android:id="@+id/ll_askabout_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">
                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="暂不更新"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/text_black2_selector"
                    android:background="@drawable/bt_save_red_left_selector"/>
                <!--bt_save_red_left_selector-->
                <!-- 两个按钮之间的竖直分割线-->
                <RelativeLayout
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:background="@color/white">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorTextD">
                    </View>
                </RelativeLayout>
                <TextView
                    android:id="@+id/btn_download"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="立即下载"
                    android:gravity="center"
                    android:textColor="@color/text_orgin_selector"
                    android:background="@drawable/bt_save_red_right_selector"/>
                <!--bt_save_red_right_selector-->
            </LinearLayout>
            <TextView
                android:id="@+id/btn_hide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="后台下载"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/text_black2_selector"
                android:background="@drawable/bt_save_bottom_selector"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</layout>