<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/root_adview_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <ImageView
        android:id="@+id/view_ad_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- android:background="@drawable/bg_black_shape_mine_ungratien"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/view_ad_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_video_play_back"
                android:padding="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="visible"/>
            <!--<TextView-->
                <!--android:id="@+id/voiew_ad_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="广告"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:textSize="@dimen/h4"-->
                <!--android:textColor="@color/input_edit_color"/>-->
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/view_btn_open_vip"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="立即前往"
        android:textSize="16sp"
        android:background="@drawable/full_room_follow_selector"
        android:layout_margin="20dp"
        android:layout_gravity="bottom|center_horizontal" />
</FrameLayout>