<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Banner-->
        <RelativeLayout
            android:id="@+id/re_banner_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_3">
            <android.support.v7.widget.CardView
                android:id="@+id/view_banner"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                android:visibility="visible">
                <com.youth.banner.Banner
                    android:id="@+id/head_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:image_scale_type="fit_xy"
                    app:indicator_drawable_selected="@drawable/arice_white_dot"
                    app:indicator_drawable_unselected="@drawable/arice_white_nomil_dot"
                    app:indicator_height="6dp"
                    app:indicator_width="6dp"
                    app:indicator_margin="4dp" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <!--用户信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/head_user_icon"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:src="@drawable/ic_default_user_head"
                android:padding="3dp"
                android:background="@drawable/pay_user_bg_red_frame_3_shape"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/head_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:text="今日累计充值"/>
            <TextView
                android:id="@+id/head_desp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:text="累计100元以上就有奖励"/>
        </LinearLayout>
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input_edit_color"/>
    </LinearLayout>
</layout>