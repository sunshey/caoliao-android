<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_small_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/item_small_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">
        <!--封面-->
        <com.yc.liaolive.view.widget.RoundImageView
            android:id="@+id/item_small_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:roundRadius="4dp"/>
        <TextView
            android:id="@+id/item_small_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="4dp"
            android:background="@drawable/index_list_one_item_bottom_bg"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="@color/white"
            tools:text="用户昵称" />
        <com.yc.liaolive.index.view.AnchorStatusView
            android:id="@+id/small_offline_state"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_pay_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_space_4"/>
        <!-- 直播观众人数 -->
        <LinearLayout
            android:id="@+id/small_live_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/common_black20_icon_bg">
            <ImageView
                android:id="@+id/item_small_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/item_small_look_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                tools:text="0人"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_small_price_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:includeFontPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@drawable/common_black20_icon_bg"
            tools:text="0钻石/分钟"/>
    </FrameLayout>

    <com.yc.liaolive.view.widget.MarqueeTextView
        android:id="@+id/item_small_title_desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorContent"
        tools:text="快来，确认个眼神~"/>
</LinearLayout>
