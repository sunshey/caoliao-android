<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_marginTop="111dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/btn_front_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/pay_user_bg_shape"
            android:padding="1.2dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_publish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@drawable/btn_login_app_style_cicle"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="105dp"
        android:textColor="@color/white"
        android:textSize="@dimen/h8"
        android:text="@string/live_config_start"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="5dp">
            <ImageView
                android:id="@+id/view_btn_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_room_close_selector"
                android:background="?attr/selectableItemBackground"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>