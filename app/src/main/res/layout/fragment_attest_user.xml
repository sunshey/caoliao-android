<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_list_empty_icon_2"
                    android:layout_marginTop="35dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_attest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_attest_desp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorText5"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/h5"
                    android:lineSpacingMultiplier="2.0" />
                <TextView
                    android:id="@+id/btn_attest"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@drawable/btn_login_app_style_cicle"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="100dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h8"
                    android:text="@string/live_attest_btn"/>
            </LinearLayout>
        </ScrollView>
        <!--android:background="@drawable/bg_btn_submit_shape_cir_selector"-->
    </RelativeLayout>
</layout>