<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/view_empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_media_empty_photo"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/view_title_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h8"
            android:textColor="@color/coment_color"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:text="暂无照片"/>
        <TextView
            android:id="@+id/view_content_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h4"
            android:textColor="#B3ABAE"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:text="你还没有上传自己的照片"/>
        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="36dp"
            android:textSize="@dimen/h8"
            android:text="去上传"
            android:textColor="@color/white"
            android:background="@drawable/bg_comment_button_true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>