<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground">
        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="@dimen/h10"
            android:textColor="@color/top_num_color"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/item_ic_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_user_head"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:id="@+id/item_ll_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_user_gradle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/item_vip_gradle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"/>
                <com.yc.liaolive.view.widget.MarqueeTextView
                    android:id="@+id/tv_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="--" />
                <ImageView
                    android:id="@+id/item_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_user_sex_wumen"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_tv_total_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="@dimen/h5"
                android:layout_marginTop="5dp"
                android:textColor="@color/top_num_color" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_qian">
    </View>
</LinearLayout>