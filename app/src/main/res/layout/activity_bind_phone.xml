<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/scroll_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_bind_task_bg"
                        android:scaleType="fitXY"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:background="@drawable/ic_bind_task_phone"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="60dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="38.3dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/bind_phone_task_input_bg">
                                <!--未绑定手机号-->
                                <LinearLayout
                                    android:id="@+id/ll_bind_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/bg_mine_top_background_white"
                                    android:visibility="visible"
                                    android:layout_centerVertical="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="46dp"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0"
                                            android:src="@drawable/ic_bind_task_number"
                                            android:layout_marginLeft="12dp"/>
                                        <EditText
                                            android:id="@+id/input_account"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="5dp"
                                            android:gravity="center_vertical"
                                            android:background="@null"
                                            android:inputType="number"
                                            android:maxLength="11"
                                            android:textSize="@dimen/h7"
                                            android:textColorHint="@color/colorTextG6"
                                            android:hint="@string/register_hint_phone"
                                            android:textColor="@color/black"/>
                                        <com.yc.liaolive.view.widget.CountdownBotton
                                            android:id="@+id/btn_get_code"
                                            android:layout_width="70dp"
                                            android:layout_height="32dp"
                                            android:layout_weight="0"
                                            android:layout_marginRight="10dp"
                                            app:countdownTextSize="11"
                                            app:countdownTextGetFocus="获取验证码"
                                            app:countdownBackgroundGetFocus="@drawable/bt_bg_input_code_red_radius"
                                            app:countdownBackgroundOutFocus="@drawable/btn_bind_getcode_bg"
                                            app:countdownTextColorGetFocus="@color/white"
                                            app:countdownTextColorOutFocus="@color/white"/>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.3dp"
                                        android:background="#E4E4E4"
                                        android:layout_marginLeft="6dp"
                                        android:layout_marginRight="10dp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="46dp"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0"
                                            android:src="@drawable/ic_bind_task_code"
                                            android:layout_marginLeft="12dp"/>
                                        <EditText
                                            android:id="@+id/input_code"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="5dp"
                                            android:gravity="center_vertical"
                                            android:background="@null"
                                            android:inputType="number"
                                            android:textSize="@dimen/h7"
                                            android:maxLength="4"
                                            android:textColorHint="@color/colorTextG6"
                                            android:hint="@string/register_hint_code"
                                            android:textColor="@color/black"/>
                                        <TextView
                                            android:id="@+id/btn_submit"
                                            android:layout_width="70dp"
                                            android:layout_height="32dp"
                                            android:layout_weight="0"
                                            android:layout_marginRight="10dp"
                                            android:text="确认绑定"
                                            android:gravity="center"
                                            android:textSize="@dimen/h4"
                                            android:textColor="@color/white"
                                            android:background="@drawable/bt_bg_input_code_red_radius"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <!--已绑定手机号-->
                                <LinearLayout
                                    android:id="@+id/ll_bindsuccess_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:visibility="invisible">
                                    <TextView
                                        android:id="@+id/tv_bindsuccess_tips"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#434343"
                                        android:gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:lineSpacingMultiplier="1.2"/>
                                    <TextView
                                        android:id="@+id/btn_get_draw"
                                        android:layout_width="70dp"
                                        android:layout_height="32dp"
                                        android:layout_weight="0"
                                        android:text="领取奖励"
                                        android:gravity="center"
                                        android:textSize="@dimen/h5"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/bt_bg_input_code_red_radius"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <View
                                android:id="@+id/view_line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/ic_bind_task_line_orgin"
                                android:visibility="invisible"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/tv_bind_tips"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/bind_phone_tips_color"
                                    android:textSize="@dimen/h4"
                                    android:layout_centerInParent="true"
                                    android:text="@string/bind_phone_tips"
                                    android:lineSpacingMultiplier="1.1"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <!--返回按钮-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/statusbar_view_height" />
                        <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_nav_back_selector_white"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="12dp"/>
                    </LinearLayout>
                </FrameLayout>
                <View
                    android:id="@+id/view_empty"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>