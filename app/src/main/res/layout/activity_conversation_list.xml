<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <com.yc.liaolive.view.widget.CommentTitleView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:commentMenuSrc1="@drawable/ic_chat_clean"
                app:commentMenuSrc2="@drawable/ic_chat_contanct"
                app:commentShowMenu1="true"
                app:commentShowMenu2="false"
                app:commentStatusBarHeight="0dp"
                app:commentTitle="消息"/>
            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:duplicateParentState="true"
                android:scrollbars="none"
                android:background="@color/background_dark"/>
        </LinearLayout>
    </FrameLayout>
</layout>