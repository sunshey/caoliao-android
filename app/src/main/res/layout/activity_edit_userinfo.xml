<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.yc.liaolive.view.widget.CommentTitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.yc.liaolive.view.layout.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/item_space_16">
                        <EditText
                            android:id="@+id/input_content"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/setting_item_height"
                            android:layout_marginTop="@dimen/item_space_20"
                            android:textSize="@dimen/h8"
                            android:textColorHint="@color/colorTextC"
                            android:textColor="@color/coment_color"
                            android:background="@drawable/bg_comment_input_white"
                            android:textCursorDrawable="@drawable/et_cursor_view" />
                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:text="0/0"
                            android:padding="5dp"
                            android:textSize="@dimen/h5" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h6"
                        android:gravity="center_horizontal"
                        android:textColor="@color/common_h3"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:layout_marginLeft="@dimen/item_space_16"
                        android:layout_marginRight="@dimen/item_space_16"
                        android:layout_marginTop="@dimen/item_space_5"
                        android:text="@string/live_attest_submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h10"
                        android:background="@drawable/bg_comment_button_false"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
        </com.yc.liaolive.view.layout.ReboundScrollView>
    </LinearLayout>
</layout>
