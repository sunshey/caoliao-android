<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@android:color/white">
    <!-- 美型 -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/face_shape_group"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:paddingLeft="8dp">
        <RelativeLayout
            android:id="@+id/face_shape_radio_layout"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/face_shape_label"
                android:layout_width="42dp"
                android:layout_height="23dp"
                android:layout_marginRight="8dp"
                android:text="脸型"
                android:textSize="13dp"
                android:textColor="#626262"
                android:gravity="center"/>
            <RadioGroup
                android:id="@+id/face_shape_radio_group"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_toRightOf="@+id/face_shape_label"
                android:showDividers="middle"
                android:divider="@drawable/driver_trans_15dp"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/face_shape_3_default"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="默认"
                    android:textColor="@android:color/white"
                    android:background="@drawable/beauty_control_bottom_shape_radio_color"
                    android:textSize="11dp"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/face_shape_0_nvshen"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="女神"
                    android:textColor="@android:color/white"
                    android:background="@drawable/beauty_control_bottom_shape_radio_color"
                    android:textSize="11dp"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/face_shape_1_wanghong"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="网红"
                    android:textColor="@android:color/white"
                    android:background="@drawable/beauty_control_bottom_shape_radio_color"
                    android:textSize="11dp"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/face_shape_2_ziran"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="自然"
                    android:textColor="@android:color/white"
                    android:background="@drawable/beauty_control_bottom_shape_radio_color"
                    android:textSize="11dp"/>
            </RadioGroup>
        </RelativeLayout>
        <TextView
            android:id="@+id/face_shape_degree_label"
            android:layout_width="42dp"
            android:layout_height="23dp"
            android:text="程度"
            android:textSize="13dp"
            android:textColor="#626262"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/face_shape_radio_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"/>
        <com.faceunity.beauty.view.seekbar.DiscreteSeekBar
            android:id="@+id/beauty_seek_bar_shape_degree"
            android:layout_width="0dp"
            android:layout_height="23dp"
            app:dsb_indicatorColor="#ff7575"
            app:dsb_indicatorElevation="0dp"
            app:dsb_indicatorPopupEnabled="true"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="#ff7575"
            app:dsb_rippleColor="#ff7575"
            app:dsb_scrubberHeight="2dp"
            app:dsb_thumbSize="23dp"
            app:dsb_trackColor="#e5e5e5"
            app:dsb_trackHeight="2dp"
            app:dsb_value="0"
            app:layout_constraintTop_toTopOf="@+id/face_shape_degree_label"
            app:layout_constraintLeft_toRightOf="@+id/face_shape_degree_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/face_shape_eye_label"
            android:layout_width="42dp"
            android:layout_height="23dp"
            android:text="大眼"
            android:textSize="13dp"
            android:textColor="#626262"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/face_shape_degree_label"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"/>
        <com.faceunity.beauty.view.seekbar.DiscreteSeekBar
            android:id="@+id/beauty_seek_bar_eye"
            android:layout_width="0dp"
            android:layout_height="23dp"
            app:dsb_indicatorColor="#ff7575"
            app:dsb_indicatorElevation="0dp"
            app:dsb_indicatorPopupEnabled="true"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="#ff7575"
            app:dsb_rippleColor="#ff7575"
            app:dsb_scrubberHeight="2dp"
            app:dsb_trackHeight="2dp"
            app:dsb_thumbSize="23dp"
            app:dsb_trackColor="#e5e5e5"
            app:dsb_value="0"
            app:layout_constraintTop_toTopOf="@+id/face_shape_eye_label"
            app:layout_constraintLeft_toRightOf="@+id/face_shape_eye_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/face_shape_face_lift_label"
            android:layout_width="42dp"
            android:layout_height="23dp"
            android:text="瘦脸"
            android:textSize="13dp"
            android:textColor="#626262"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/face_shape_eye_label"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"/>
        <com.faceunity.beauty.view.seekbar.DiscreteSeekBar
            android:id="@+id/beauty_seek_bar_face_lift"
            android:layout_width="0dp"
            android:layout_height="33dp"
            app:dsb_indicatorColor="#ff7575"
            app:dsb_indicatorElevation="0dp"
            app:dsb_indicatorPopupEnabled="true"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="#ff7575"
            app:dsb_rippleColor="#ff7575"
            app:dsb_scrubberHeight="2dp"
            app:dsb_trackHeight="2dp"
            app:dsb_thumbSize="23dp"
            app:dsb_trackColor="#e5e5e5"
            app:dsb_value="0"
            app:layout_constraintTop_toTopOf="@+id/face_shape_face_lift_label"
            app:layout_constraintLeft_toRightOf="@+id/face_shape_face_lift_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/beauty_seek_bar_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/beauty_seek_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#626262"
            android:textSize="13dp"
            android:text="0"
            android:layout_marginLeft="16dp"/>
        <com.faceunity.beauty.view.seekbar.DiscreteSeekBar
            android:id="@+id/beauty_seek_bar"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            app:dsb_indicatorColor="#ff7575"
            app:dsb_indicatorElevation="0dp"
            app:dsb_indicatorPopupEnabled="true"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="#ff7575"
            app:dsb_rippleColor="#ff7575"
            app:dsb_trackHeight="2dp"
            app:dsb_scrubberHeight="2dp"
            app:dsb_thumbSize="23dp"
            app:dsb_trackColor="#e5e5e5"/>
        <TextView
            android:id="@+id/beauty_seek_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#626262"
            android:textSize="13dp"
            android:text="100"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
    <!-- 滤镜 -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/filter_recycle_view"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone"/>
    <!-- 磨皮 -->
    <RadioGroup
        android:id="@+id/beauty_box_blur_level"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:showDividers="middle"
        android:divider="@drawable/driver_trans_8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"/>
    <View
        android:id="@+id/beauty_line"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#eeeeee"/>
    <com.faceunity.beauty.view.CheckGroup
        android:id="@+id/beauty_radio_group"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/beauty_radio_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="滤镜"
            android:textColor="@color/beauty_option_text"
            android:textSize="13dp"
            android:checked="true"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/beauty_radio_beauty_skin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="磨皮"
            android:textColor="@color/beauty_option_text"
            android:textSize="13dp"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/beauty_radio_skin_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="美白"
            android:textColor="@color/beauty_option_text"
            android:textSize="13dp"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/beauty_radio_beauty_ruddy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="红润"
            android:textColor="@color/beauty_option_text"
            android:textSize="13dp"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/beauty_radio_face_shape"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:gravity="center"
            android:text="美型"
            android:textColor="@color/beauty_option_text"
            android:textSize="13dp"/>
    </com.faceunity.beauty.view.CheckGroup>
</LinearLayout>