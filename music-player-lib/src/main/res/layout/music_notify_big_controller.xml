<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/music_notice_big_notify_root">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/music_notice_big_cover"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/music_notice_big_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="周杰伦"
                    android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"/>
                <TextView
                    android:id="@+id/music_notice_big_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="周杰伦"
                    android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CBCBCB"
                android:layout_weight="0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="bottom">
                <ImageView
                    android:id="@+id/music_notice_big_btn_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_music_mini_last_noimal"
                    android:scaleType="center"
                    android:padding="6dp"/>
                <ImageView
                    android:id="@+id/music_notice_big_btn_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_music_mini_play_noimal"
                    android:scaleType="center"
                    android:padding="6dp"/>
                <ImageView
                    android:id="@+id/music_notice_big_btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_music_mini_next_noimal"
                    android:scaleType="center"
                    android:padding="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/music_notice_big_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/ic_music_mini_close"
        android:scaleType="center"
        android:padding="10dp"/>
</FrameLayout>