<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--顶部菜单-->
    <LinearLayout
        android:id="@+id/video_top_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/video_controllect_top_bg"
        android:gravity="center_vertical"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/video_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/video_controller_back_white_selector"/>
        <TextView
            android:id="@+id/video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/video_btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="12dp"
            android:src="@drawable/ic_video_controller_menu"/>
    </LinearLayout>

    <!--底部菜单-->
    <LinearLayout
        android:id="@+id/video_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:background="@drawable/video_controllect_bottom_bg">
        <ImageView
            android:id="@+id/video_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_video_controller_play"/>
        <TextView
            android:id="@+id/video_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:textSize="11dp"
            android:text="00:00"
            android:textColor="#FFFFFF"/>
        <SeekBar
            android:id="@+id/video_seek_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@null"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="1dp"
            android:progressDrawable="@drawable/video_bottom_seek_progress"
            android:thumb="@drawable/video_bottom_seek_thumb"/>
        <TextView
            android:id="@+id/video_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="11dp"
            android:paddingLeft="8dp"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"/>
        <ImageView
            android:id="@id/video_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_video_full_scrrent"/>
    </LinearLayout>
    <!--失败-->
    <LinearLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#80000000"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="糟糕，视频播放失败~"
            android:textColor="#F0F0F0"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="@drawable/video_text_button_bg"
            android:text="点击重试"
            android:textColor="#F0F0F0"
            android:textSize="13dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mobile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#80000000"
        android:clickable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center"
            android:text="当前网络未连接WIFI,将使用流量播放"
            android:textColor="#FFFFFF"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/video_btn_reset_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/video_text_play_bg"
            android:text="继续播放"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />
    </LinearLayout>
    <!--Progress-->
    <ProgressBar
        android:id="@+id/bottom_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progressDrawable="@drawable/video_bottom_progress"
        android:visibility="invisible"/>
    <!--小窗口-->
    <ImageView
        android:id="@+id/video_btn_back_tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/ic_video_tiny_close"
        android:visibility="invisible"/>
    <!--加载中-->
    <ProgressBar
        android:id="@+id/video_loading"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateDrawable="@drawable/video_loading_anim"
        android:visibility="invisible"/>
    <!--开始按钮-->
    <ImageView
        android:id="@+id/video_start"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_video_cover_play"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="visible"/>
</RelativeLayout>